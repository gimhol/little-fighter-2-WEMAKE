{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "outDir": "./dist",
    "rootDirs": [
      "./src",
      "../src/Net"
    ],
    "noUncheckedIndexedAccess": true,
    "typeRoots": [
      "node_modules/@types",
      "./src/types"
    ],
    "lib": [
      "ES2015"
    ]
  }
}